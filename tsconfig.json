{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": false,
    "skipLibCheck": true
  },

  "include": ["src/**/*.ts"],
  "exclude": ["examples/**", "web/**"]
}
