{
  "name": "fastify-mikroorm",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "node --env-file=.env ./node_modules/tsx/dist/cli.cjs watch src/main.ts",
    "start": "node --env-file=.env --enable-source-maps dist/main.js",
    "build": "tsc -p tsconfig.json",
    "test": "node --env-file=.env.test ./node_modules/jest/bin/jest.js --runInBand",
    "test:coverage": "node --env-file=.env.test ./node_modules/jest/bin/jest.js --runInBand --coverage",
    "test:watch": "node --env-file=.env.test ./node_modules/jest/bin/jest.js --runInBand --watch",
    "schema:sdl": "runner-dev schema sdl",
    "db:migrate:up": "mikro-orm migration:up",
    "db:migrate:down": "mikro-orm migration:down",
    "db:migrate:create": "mikro-orm migration:create"
  },
  "dependencies": {
    "@bluelibs/runner": "file:../..",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.0",
    "@fastify/swagger": "^9.4.1",
    "@fastify/swagger-ui": "^5.1.0",
    "@mikro-orm/core": "^6.5.2",
    "@mikro-orm/migrations": "^6.5.2",
    "@mikro-orm/postgresql": "^6.5.2",
    "fastify": "^5.6.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@bluelibs/runner-dev": "^4.4.6",
    "@mikro-orm/cli": "^6.5.2",
    "@mikro-orm/sqlite": "^5.1.2",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.6.3"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "src/db/mikro-orm.config.ts",
      "src/db/mikro-orm.config.js"
    ]
  }
}
