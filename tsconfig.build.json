{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Build-specific overrides
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": [
    "examples/**",
    "src/__tests__/**",
    "src/**/__tests__/**",
    "src/**/*.test.ts"
  ]
}
